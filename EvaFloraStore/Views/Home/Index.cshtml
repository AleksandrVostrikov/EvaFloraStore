@using EvaFloraStore.Models.ViewModels;
@model ProductListViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @if (TempData["ProductAddToChart"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["ProductAddToChart"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @foreach (var item in Model.Products)
    {
        <div class="col-4 justify-content-start">
            <partial name="ProductSummary" model="item.DispalyedProduct" />
        </div>
        @if (item.PositionInList % 2 != 0 && item.PositionInList != Model.ProductsCount)
        {
            <div class="w-100 mt-3"></div>
        }
    }
</div>
<partial name="NavigationPages" model="@Model"/>