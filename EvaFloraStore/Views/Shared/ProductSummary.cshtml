@model Product
@{
}

<div class="card mb-3" style="width: 25rem;">
    <div class="card-body bg-light">
        <h4 class="card-title">@Model.Name</h4>
        <span class="badge bg-primary" style="float:right;">
            <small>@Model.Price.ToString() руб.</small>
        </span>
        <div class="card-text">
            @Model.Description
            <form id="@Model.Id">
                @*asp-page="/Cart" method="post" asp-action="Index" asp-controller="Home">*@
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="returnUrl"
                       value="/Index" /> @*"@ViewContext.HttpContext.Request.PathAndQuery()"*@
                <span class="card-text p-1">
                    <button type="submit"
                            class="btn btn-success btn-sm mt-3" style="float:right">
                        В корзину
                    </button>
                </span>
            </form>
        </div>
    </div>
</div>

